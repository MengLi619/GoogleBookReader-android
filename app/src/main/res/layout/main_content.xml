<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xiaoheifamily.bookstore.activity.MainActivity.MainActivity"
    tools:showIn="@layout/main_activity">

    <data>

        <variable
            name="model"
            type="com.xiaoheifamily.bookstore.viewmodel.MainViewModel" />

        <import type="com.xiaoheifamily.bookstore.binding.recyclerview.LayoutManagers" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemBinder="@{model.itemBinder}"
            app:items="@{model.books}"
            app:layoutManager="@{LayoutManagers.linear()}"
            app:onLoadMore="@{model.onLoadMore}"
            app:onRefresh="@{model.onRefresh}" />

    </LinearLayout>

</layout>
